<html>
    <head>
        <meta charset="UTF-8">
        <meta name='viewport' content="width=device-width, initial-scale=1.0">
        <title>Blog</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <style>
            body{
                
                
            }
            
            #Header{
                
                text-align: center;
                font-size: 4.3em;
                padding-bottom: 1.4em;}
            #Plus:hover{
                opacity: 1;
                transform:scale(1.1);
                transition: transform 0.5s;
            }
            #Plus{
                opacity: 0.5;
                transition: transform 0.5s;
                width:5em;
            margin:0 auto;}
            .content {
                border: 1px solid rgba(180,180,180);
                border-radius: 1em;
                padding: 2em;
                background-color: white;
            }
        

        </style>
    </head>
    <body>
        <div class="container">
            <h1 class="mb-4" id="Header">TunaBlog </h1>
            <div class="content">
            <a href="/posts/new">
            
                    <img id="Plus" src="https://img.icons8.com/ios/344/plus-2-math.png">
                
            </a>
            
            
            <% posts.forEach(post => { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title"><%= post.title %></h4>
                        <div class="card-subtitle text-muted mb-2">
                            <%= post.createdAt %>
                        </div>
                        <div class="card-text mb-2"><%= post.description %></div>
                        <a class="btn btn-primary" href="posts/<%= post.slug %>">Read More</a>
                        <a class="btn btn-info" href="posts/edit/<%= post.id %>">Edit</a>
                        <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
            </div>
        </div>
    </body>
</html>