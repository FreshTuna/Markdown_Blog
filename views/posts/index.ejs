<html>
    <head>
        <meta charset="UTF-8">
        <meta name='viewport' content="width=device-width, initial-scale=1.0">
        <title>Blog</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h1 class="mb-4">Blog Posts</h1>
            <a href="/posts/new" type="button" class="btn btn-success">New Post</a>

            <% posts.forEach(post => { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title"><%= post.title %></h4>
                        <div class="card-subtitle text-muted mb-2">
                            <%= post.createdAt %>
                        </div>
                        <div class="card-text mb-2"><%= post.description %></div>
                        <a class="btn btn-primary" href="posts/<%= post.slug %>">Read More</a>
                        <a class="btn btn-info" href="posts/edit/<%= post.id %>">Edit</a>
                        <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </body>
</html>